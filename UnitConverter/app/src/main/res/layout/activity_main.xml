<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/selection"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/inputUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/inputUnit"
        android:layout_width="187dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/inputUnit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selection"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/result1"
        android:layout_width="132dp"
        android:layout_height="85dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="133dp"
        android:text="@string/result1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="136dp"
        android:layout_height="79dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/result3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="135dp"
        android:layout_height="89dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/unit1"
        android:layout_width="133dp"
        android:layout_height="88dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUnit" />

    <TextView
        android:id="@+id/unit2"
        android:layout_width="147dp"
        android:layout_height="81dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/unit3"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/unit3"
        android:layout_width="133dp"
        android:layout_height="83dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="158dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/temperatureButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weightButton"
        app:layout_constraintStart_toEndOf="@+id/measurementButton"
        app:srcCompat="@drawable/temperature"
        android:contentDescription="@string/temperature_button"/>

    <ImageButton
        android:id="@+id/measurementButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/measurement"
        android:contentDescription="@string/measurement_button"/>

    <ImageButton
        android:id="@+id/weightButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/weight"
        android:contentDescription="@string/weight_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>